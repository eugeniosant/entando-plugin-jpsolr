<?xml version="1.0" encoding="UTF-8"?>
<component>
    <code>jpsolr</code>
    <description>Solr Connector</description>
    <artifact>
        <artifactId>${project.artifactId}</artifactId>
        <groupId>${project.groupId}</groupId>
        <version>${project.version}</version>
    </artifact>
    <dependencies>
        <code>jacms</code>
    </dependencies>
    <installation>
        <environment code="production">
            <defaultSqlResources>
                <datasource name="portDataSource">
                    classpath:sql/plugins/jpsolr/port_data_production.sql
                </datasource>
                <datasource name="servDataSource">
                    classpath:sql/plugins/jpsolr/serv_data_production.sql
                </datasource>
            </defaultSqlResources>
        </environment>
        <environment code="test">
            <defaultSqlResources>
                <datasource name="portDataSource">
                    classpath:sql/plugins/jpsolr/port_data_test.sql
                </datasource>
                <datasource name="servDataSource">
                    classpath:sql/plugins/jpsolr/serv_data_test.sql
                </datasource>
            </defaultSqlResources>
        </environment>
    </installation>
</component>
